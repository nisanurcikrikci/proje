<div id="ekipmanModal" class="modal">

    <div class="modal-icerik">

        <span class="kapat"
              onclick="document.getElementById('ekipmanModal').style.display='none'">
            &times;
        </span>

        <h2 id="modalBaslik"></h2>
        <p id="modalAciklama"></p>

        <div class="modal-resim-alani">
            <img id="modalGorsel">
        </div>

    </div>
