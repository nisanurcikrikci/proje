<!-- 🔹 UYARI -->
<div id="uyari" class="uyari">
    Bu içerik sadece <strong>üyelere özeldir</strong>.
</div>

<script>
    function ekipmanTiklandi(element) {

        var girisVarMi = @girisYapildiMi.ToString().ToLower();

        if (!girisVarMi) {
            document.getElementById("uyari").style.display = "block";
            setTimeout(() => {
                document.getElementById("uyari").style.display = "none";
            }, 2500);
            return;
        }

        document.getElementById("modalBaslik").innerText =
            element.getAttribute("data-ad");

        document.getElementById("modalAciklama").innerText =
            element.getAttribute("data-aciklama");

        document.getElementById("modalGorsel").src =
            element.getAttribute("data-gorsel");

        document.getElementById("ekipmanModal").style.display = "flex";
    }
</script>
