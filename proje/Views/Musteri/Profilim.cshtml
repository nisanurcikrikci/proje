@model Musteri

<h2>Profilim</h2>

@if (ViewBag.Mesaj != null)
{
    <div class="alert alert-success">@ViewBag.Mesaj</div>
}

<form asp-action="Profilim" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label>Ad Soyad</label>
        <input asp-for="AdSoyad" class="form-control" />
    </div>

    <div class="mb-3">
        <label>E-posta</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Telefon</label>
        <input asp-for="Telefon" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Boy (cm)</label>
        <input asp-for="Boy" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Kilo (kg)</label>
        <input asp-for="Kilo" class="form-control" />
    </div>

    <!-- Odak Alanı -->
    <div class="mb-3">
        <label>Odaklanmak İstediğin Alan</label>
        <select asp-for="OdaklanilanAlan" class="form-select">
            <option value="">Seçiniz</option>
            <option value="Kilo Verme">Kilo Verme</option>
            <option value="Kas Geliştirme">Kas Geliştirme</option>
            <option value="Kardiyo">Kardiyo</option>
            <option value="Esneklik">Esneklik</option>
            <option value="Rehabilitasyon">Rehabilitasyon</option>
        </select>
    </div>

    <div id="alanBilgi" class="alert alert-info" style="display:none;"></div>

    <button type="submit" class="btn btn-primary">Bilgileri Güncelle</button>
</form>

<hr />

