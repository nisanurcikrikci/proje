@model List<Musteri>

<h3>Müşteriler</h3>

@if (TempData["Basarili"] != null)
{
    <div class="alert alert-success">
        @TempData["Basarili"]
    </div>
}

@if (TempData["Hata"] != null)
{
    <div class="alert alert-danger">
        @TempData["Hata"]
    </div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>Boy</th>
            <th>Kilo</th>
            <th>Odak</th>
            <th>İşlem</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.AdSoyad</td>
                <td>@m.Email</td>
                <td>@m.Telefon</td>
                <td>@m.Boy</td>
                <td>@m.Kilo</td>
                <td>@m.OdaklanilanAlan</td>
                
                <td>
                    <!-- Antrenör Yap -->
                    <form asp-action="TrainerEkle"
                          method="post"
                          style="display:inline">
                        <input type="hidden" name="userId" value="@m.IdentityUserId" />
                        <button type="submit"
                                class="btn btn-sm btn-primary"
                                onclick="return confirm('Bu kullanıcıyı antrenör yapmak istiyor musunuz?')">
                            Antrenör Yap
                        </button>
                    </form>

                    <!-- Müşteri Sil -->
                    <form asp-action="MusteriSil"
                          method="post"
                          style="display:inline">
                        <input type="hidden" name="id" value="@m.Id" />
                        <button type="submit"
                                class="btn btn-sm btn-danger"
                                onclick="return confirm('Bu müşteri ve tüm randevuları silinsin mi?')">
                            Sil
                        </button>
                    </form>
                </td>

                
            </tr>
        }
    </tbody>
</table>
